<rx:ReactiveWindow x:Class="DCT.TraineeTasks.Shapes.Views.MainWindow"
                   x:TypeArguments="vm:MainWindowViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:rx="http://reactiveui.net"
        xmlns:vm="clr-namespace:DCT.TraineeTasks.Shapes.ViewModels"
                   xmlns:local="clr-namespace:DCT.TraineeTasks.Shapes.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu>
            <MenuItem Header="Language">
                <MenuItem
                    Click="UkrainianMenuItem_OnClick"
                    Header="Ukrainian"/>
                <MenuItem Header="English"/>
            </MenuItem>
        </Menu>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.12*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Label>DCT.TraineeTasks.Shapes</Label>
            <Button
                Click="PlayButton_OnClick"
                x:Name="PlayButton">Play or Pause</Button>
        </StackPanel>
        <ListBox Grid.Row="1" Grid.Column="0" 
                 SelectionChanged="ShapesListBox_OnSelectionChanged"
                 x:Name="ShapesListBox"/>
        <Canvas Grid.Row="1" Grid.Column="1"
                x:Name="ShapesCanvas">
        </Canvas>
        <StackPanel Grid.Row="0" Grid.Column="1" 
                    Orientation="Horizontal"
                    x:Name="ShapesStackPanel">
            <Button Margin="5" 
            Padding="5" 
            Click="TriangleButton_OnClick"
            x:Name="TriangleButton">Triangle</Button>
            <Button Margin="5" 
            Padding="5"
            Click="SquareButton_OnClick"
            x:Name="SquareButton">Square</Button>
            <Button Margin="5" 
            Padding="5" 
            Click="CircleButton_OnClick"
            x:Name="CircleButton">Circle</Button>
        </StackPanel>
    </Grid>
    </DockPanel>
</rx:ReactiveWindow>
